<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.PostRocker" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimaryDark"> @color/medium_black </item>
        <item name="colorPrimary">@color/medium_black</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/light</item>
        <item name="colorSecondary">@color/medium_light</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.PostRocker.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="fontFamily"> @font/new_rocker </item>
    </style>

    <style name="Theme.PostRocker.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.PostRocker.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>