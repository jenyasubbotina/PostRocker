<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".tasks.single_task.SingleTask"
        android:padding="@dimen/small_margin">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/buttons_panel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_back"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/ic_arrow_back"
                    android:backgroundTint="@color/black"
                    android:textColor="@color/dark_blue" />

                <Button
                    android:id="@+id/task_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:background="@android:color/transparent"
                    android:backgroundTint="@color/black"
                    android:text="@string/send"
                    android:textColor="@color/dark_blue" />

            </RelativeLayout>

            <TextView
                android:id="@+id/task_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/buttons_panel"
                android:padding="@dimen/small_margin"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/h1"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/holder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/task_name"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/task_time_limit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:padding="@dimen/small_margin"
                    android:text="@string/time_limit"
                    android:textAlignment="center"
                    android:textSize="@dimen/h2"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/task_memory_limit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:padding="@dimen/small_margin"
                    android:text="@string/memory_limit"
                    android:textSize="@dimen/h2"
                    android:textAlignment="center"
                    android:textColor="@color/black"/>

            </LinearLayout>

            <TextView
                android:id="@+id/task_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/holder"
                android:layout_marginTop="@dimen/small_margin"
                android:layout_centerHorizontal="true"
                android:textSize="@dimen/h1"
                android:textColor="@color/black" />

            <LinearLayout
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/task_description"
                android:layout_marginTop="@dimen/medium_margin"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/small_margin"
                    android:layout_weight="1"
                    android:textSize="@dimen/h2"
                    android:text="@string/input"
                    android:textAlignment="center"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/small_margin"
                    android:layout_weight="1"
                    android:textSize="@dimen/h2"
                    android:text="@string/output"
                    android:textAlignment="center"
                    android:textColor="@color/black"/>

            </LinearLayout>

            <TableLayout
                android:id="@+id/task_io_example"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text"
                android:layout_marginTop="@dimen/small_margin"
                android:stretchColumns="*">

            </TableLayout>

        </RelativeLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>

