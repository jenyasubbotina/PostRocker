<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/small_margin">

    <TextView
        android:id="@+id/contest_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="@dimen/small_margin"
        android:layout_toStartOf="@id/contest_time"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textSize="@dimen/h1"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/contest_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/contest_name"
        android:layout_marginEnd="@dimen/small_margin"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/contest_duration"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textSize="@dimen/h2"/>

    <TextView
        android:id="@+id/contest_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        app:drawableStartCompat="@drawable/ic_clock"
        android:drawablePadding="@dimen/small_margin"
        android:textSize="@dimen/h3"/>

    <TextView
        android:id="@+id/contest_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/contest_name"
        android:layout_alignParentEnd="true"
        android:textSize="@dimen/h3"/>

</RelativeLayout>